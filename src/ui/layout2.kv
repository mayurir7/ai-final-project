        font_size: 30
        size: 82, 49
        pos: [root.pos[0] + 94, root.pos[1] + 49]
        id: time_selector_time
        text: '56'
    HoverButton:
        id: time_selector_down
        size_hint: None, None
        size: 20, 20
        pos: [root.pos[0] + 47, root.pos[1] + 18]
